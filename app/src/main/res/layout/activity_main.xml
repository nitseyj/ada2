<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:padding="16dp">

    <!-- Top-left logo -->
<LinearLayout
android:id="@+id/logo_layout"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center_vertical"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
android:layout_marginTop="24dp"
android:layout_marginStart="16dp">

</LinearLayout>

    <!-- “Who Are You?” label -->
<TextView
android:id="@+id/tv_who"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Who Are You?"
android:textSize="18sp"
android:textColor="#000000"
app:layout_constraintTop_toBottomOf="@+id/logo_layout"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginTop="100dp"
    tools:ignore="HardcodedText" />

    <!-- Seller button -->
<Button
android:id="@+id/btn_seller"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Seller"
android:textSize="20sp"
android:textColor="#FFFFFF"
android:backgroundTint="#4CAF50"
android:padding="16dp"
app:layout_constraintTop_toBottomOf="@+id/tv_who"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginTop="24dp"
android:layout_marginStart="32dp"
android:layout_marginEnd="32dp"
android:stateListAnimator="@null"
android:background="@drawable/rounded_corner"
    tools:ignore="HardcodedText" />

    <!-- Buyer button -->
<Button
android:id="@+id/btn_buyer"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Buyer"
android:textSize="20sp"
android:textColor="#FFFFFF"
android:backgroundTint="#4CAF50"
android:padding="16dp"
app:layout_constraintTop_toBottomOf="@+id/btn_seller"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginTop="16dp"
android:layout_marginStart="32dp"
android:layout_marginEnd="32dp"
android:stateListAnimator="@null"
android:background="@drawable/rounded_corner"
    tools:ignore="HardcodedText" />

    <!-- Bottom “First Time User? Log In” -->
<LinearLayout
android:id="@+id/bottom_layout"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginBottom="24dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="First Time User?"
    android:textSize="16sp"
    android:textColor="#000000"
    tools:ignore="HardcodedText" />

<TextView
    android:id="@+id/tv_login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=" Sign Up"
    android:textSize="16sp"
    android:textColor="#2196F3"
    android:clickable="true"
    android:focusable="true"
    tools:ignore="HardcodedText" />
</LinearLayout>

    <ImageView
        android:layout_width="145dp"
        android:layout_height="63dp"
        android:importantForAccessibility="no"
        android:src="@drawable/recyclebersama"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="-4dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
