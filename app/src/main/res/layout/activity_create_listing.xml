<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_green"
    android:padding="24dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Page Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create New Listing"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp" />

            <!-- Title Field -->
            <EditText
                android:id="@+id/etTitle"
                android:hint="Listing Title"
                android:textColor="#1B1B1B"
                android:textColorHint="#777777"
                android:background="@drawable/bg_white_rounded_box"
                android:padding="14dp"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Category Spinner -->
            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_white_rounded_box"
                android:padding="12dp" />

            <!-- Quantity -->
            <EditText
                android:id="@+id/etQuantity"
                android:hint="Quantity (grams)"
                android:inputType="number"
                android:textColor="#1B1B1B"
                android:textColorHint="#777777"
                android:background="@drawable/bg_white_rounded_box"
                android:padding="14dp"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Price -->
            <EditText
                android:id="@+id/etPrice"
                android:hint="Price (RM)"
                android:inputType="numberDecimal"
                android:textColor="#1B1B1B"
                android:textColorHint="#777777"
                android:background="@drawable/bg_white_rounded_box"
                android:padding="14dp"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Description -->
            <EditText
                android:id="@+id/etDesc"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:textColor="#1B1B1B"
                android:textColorHint="#777777"
                android:background="@drawable/bg_white_rounded_box"
                android:padding="14dp"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Location -->
            <TextView
                android:id="@+id/txtAddress"
                android:text="Location: [Auto-filled]"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Upload Button -->
            <Button
                android:id="@+id/btnUploadListing"
                android:text="Upload Listing"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#66C168"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <!-- Back Button -->
            <Button
                android:id="@+id/btnBackCreate"
                android:text="⬅️ Back"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#0D2B3E"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
